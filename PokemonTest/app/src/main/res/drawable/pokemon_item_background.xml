<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/pokemon_item_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con un color degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFEB3B"
                android:endColor="#FFC107"
                android:angle="45"/>
        </shape>
    </item>
    <!-- Borde con sombra -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#BDBDBD"/>
        </shape>
    </item>
</layer-list>
